@model IEnumerable<JobSocialPoster.Core.Models.Profile>

@{
    ViewBag.Title = "Zarządzaj profilami";
}

<h2>Zarządzaj profilami</h2>
@Html.Raw(ViewBag.message)
<p>
    @Html.ActionLink("Dodaj nowy profil", "Create")
</p>

<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.Name) @Html.ActionLink(" ", "Index", new { sortOrder = ViewBag.NameSortParm }, new { @class = "glyphicon glyphicon-sort" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.File)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SocialpilotId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImportCsv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category) @Html.ActionLink(" ", "Index", new { sortOrder = ViewBag.CategorySortParm }, new { @class = "glyphicon glyphicon-sort" })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a id="import-file" href="~/Content/ImportFiles/@item.File">@Html.DisplayFor(modelItem => item.File)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocialpilotId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <a href="@Html.Raw(item.Url)">Zobacz profil &raquo;</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportCsv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Import", "Import", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
